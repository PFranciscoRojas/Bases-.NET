@model IEnumerable<Alumno>

@{
    ViewData["Title"] = "Información Alumnos";
    Layout = "Simple";
}

    <div class="text-center">
        <h1 class="display-4">@ViewData["Title"]</h1>
        <strong>Desde la vista parcial</strong>

        <table class="table table-dark table-hover table-sm">
            <thead>
                <tr>
                    <th scope="col">Nombre</th>
                    <th scope="col">Id</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var alumno in Model)
                {
                    <tr>
                        <td>@alumno.Nombre</td>
                        <td>@alumno.Id</td>
                    </tr>
                }
            </tbody>
        </table>
        <p>@ViewBag.Fecha</p>
    </div>
